{
  "name": "usecaptcha",
  "version": "1.0.2",
  "description": "React hook for Google reCAPTCHA v2.",
  "main": "dist/",
  "browserslist": [
    "> 2%",
    "ie >= 11",
    "not op_mini all"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "browsers": [
              "> 2%",
              "ie >= 11",
              "not op_mini all"
            ]
          }
        }
      ],
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/transform-runtime"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "cssnano": {
        "safe": true
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "start": "webpack-dev-server --mode development",
    "build-package": "npm run clean && npm run transpile-css && npm run transpile-js",
    "build-example": "webpack --mode production",
    "deploy": "gh-pages -d example/dist",
    "publish-npm": "npm run build-package && npm publish",
    "publish-git": "npm run build-package && npm run build-example && npm run deploy",
    "transpile-css": "postcss src/style.css --no-map --output=dist/style.css",
    "transpile-js": "babel src/**/*.js -d dist --copy-files"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sakalx/useCaptcha"
  },
  "keywords": [
    "captcha",
    "google-recaptcha",
    "react",
    "react-hook",
    "recaptcha"
  ],
  "author": "Serhii Sakal <serhii.sakal@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sakalx/useCaptcha/issues"
  },
  "homepage": "https://sakalx.github.io/useCaptcha",
  "peerDependencies": {
    "react": "16.10.1",
    "react-dom": "16.10.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "7.6.2",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-react": "7.0.0",
    "@babel/runtime": "7.6.2",
    "babel-loader": "8.0.6",
    "css-loader": "^3.2.0",
    "cssnano": "4.1.10",
    "extract-text-webpack-plugin": "^4.0.0-alpha.0",
    "gh-pages": "2.1.1",
    "html-webpack-plugin": "3.2.0",
    "postcss-cli": "6.1.3",
    "postcss-preset-env": "6.7.0",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "style-loader": "^1.0.0",
    "webpack": "^4.41.0",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.8.1"
  }
}
